#include <dt-bindings/zmk/matrix_transform.h>

&xiao_spi {
	status = "okay";

	cs-gpios = <&xiao_d 5 GPIO_ACTIVE_LOW>;
	expander: mcp23sxx@0 {
		compatible = "microchip,mcp23sxx";
		status = "okay";
		gpio-controller;
		spi-max-frequency = <800000>;
		reg = <0>;
		label = "MCP23S17";
		#gpio-cells = <2>;
		ngpios = <16>;
        int-gpios = <&xiao_d 6 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
	};
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                 RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                 RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                 RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(4,5) RC(4,6) RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
                RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "col2row";
        row-gpios
            = <&expander 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&expander 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&expander 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&expander 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&expander 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;

    };
};
